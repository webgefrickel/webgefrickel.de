# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,scss,sass,js,json}]
indent_size = 2
indent_style = space

[*.{html,php,twig}]
indent_size = 2
indent_style = space

[*.{yml,yaml,ini}]
indent_size = 2
indent_style = space

[*.{md,markdown,rst,txt}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
